{
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "file://*"
  ],
  "version": "1.2",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "res/icons/hello_extensions.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Open the extension"
    }
  }
}